avatarSize = 56px

md-toolbar h3
  margin auto
  font-weight 500

md-list-item > button
  width 100%
  text-align left !important

.avatar
  position relative
  width avatarSize
  height avatarSize
  border 1px solid #ddd
  border-radius 50%
  display inline-block
  overflow hidden
  margin 0
  vertical-align middle
  zoom 0.07
  transform translateZ(0) s
  transform scale(0.07)
